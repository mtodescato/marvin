{
  "extends": "airbnb",
  "globals": {
    "artifacts": true,
    "it": true,
    "expect": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
  "sourceType": "module",
  "ecmaVersion": 8
  },
  "rules": {
    "react/jsx-filename-extension": [1, {
      "extensions": [".js", ".jsx"]
    }],
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/anchor-is-valid": [
      "error", { "specialLink": ["to"]}
    ]
  },
  "plugins": [
    "react",
    "mocha"
  ]
}
